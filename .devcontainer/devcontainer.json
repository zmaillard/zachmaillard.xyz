{
  "name": "Ubuntu",
  "build": {
    "dockerfile": "Dockerfile.dev"
  },
  "features": {
    "ghcr.io/devcontainers/features/hugo:1": {
      "extended": true
    },
    "ghcr.io/devcontainers-contrib/features/aws-cli:1": {},
    "ghcr.io/devcontainers-contrib/features/direnv:1": {},
    "ghcr.io/devcontainers-contrib/features/starship:1": {},
    "ghcr.io/devcontainers-contrib/features/neovim-apt-get:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": ["asvetliakov.vscode-neovim", "redhat.vscode-yaml"]
    }
  },

  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  "forwardPorts": [1313],

  // You can use go mod instead
  "postCreateCommand": "git submodule update --init"
}
